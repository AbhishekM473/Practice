<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abhishek.medsreminder.activities.AlarmActivity">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Hello World" />

    <TextView
        android:id="@+id/tv_dosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginBottom="16dp"
        android:text="Hello World" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dosage"
        android:layout_marginBottom="16dp"
        android:text="Hello World" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date"
        android:layout_marginBottom="16dp"
        android:text="Hello World" />

    <Button
        android:id="@+id/bt_taken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_green_light"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="TAKEN"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bt_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_taken"
        android:background="@android:color/darker_gray"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="SKIP"
        android:textSize="18sp" />


</RelativeLayout>
